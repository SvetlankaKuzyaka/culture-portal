  "bio": [
    {
      "date": "1957",
      "description": "Born in the city of Izyum (Kharkiv region, Ukraine)."
    },
    {
      "date": "1979",
      "description": "Graduated from the directing faculty of the Belarusian Academy of Arts."
    },
    {
      "date": "1979-1980",
      "description": "Worked as a director of the Belarusian television, where he staged the teleplay «Night stagecoach» by K.Paustovsky."
    },
    {
      "date": "1980-1982",
      "description": "Worked in the M.Gorky Russian theater in Minsk."
    },
    {
      "date": "1982-1984",
      "description": "Trained as a director at the Moscow Maly Theater."
    },
    {
      "date": "1985",
      "description": "Becomes the director of the Y.Kupala National Academic Theater."
    },
    {
      "date": "1985-1987",
      "description": "Teacher of the faculty «Actor's skill and direction» in the Belarusian Academy of Arts."
    },
    {
      "date": "1995",
      "description": "Trained as a director at the Paris Theater Courant D’Est (France)."
    },
    {
      "date": "1998—2009",
      "description": "Worked as a production director at the G.Tovstonogov Bolshoi Drama Theater (St. Petersburg)."
    },
    {
      "date": "2009-present",
      "description": "Artistic Director of the Y.Kupala National Academic Theater."
    }
